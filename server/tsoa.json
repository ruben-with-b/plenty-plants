{
  "swagger": {
    "outputDirectory": "./dist",
    "entryFile": "./src/server.ts",
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "securityDefinitions": {
      "passport_local": {
        "type": "basic"
      }
    },
    "yaml": true
  },
  "routes": {
    "basePath": "/api/v1",
    "entryFile": "./src/server.ts",
    "routesDir": "./src",
    "middleware": "express",
    "authenticationModule": "./src/authentication.ts"
  }
}
