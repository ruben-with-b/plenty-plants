{
  "swagger": {
    "outputDirectory": "./dist",
    "entryFile": "./src/server.ts",
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "securityDefinitions": {
      "basicAuth": {
        "type": "basic"
      }
    },
    "yaml": true,
    "tags": [
      {
        "name": "Authentication",
        "description": "Common authentication functions"
      },
      {
        "name": "User",
        "description": "User specific information"
      },
      {
        "name": "Plants",
        "description": "Information about plants"
      },
      {
        "name": "Weather",
        "description": "Information about weather"
      },
      {
        "name": "Notifications",
        "description": "Functions to manage Push-Notifications"
      }
    ]
  },
  "routes": {
    "basePath": "/api/v1",
    "entryFile": "./src/server.ts",
    "routesDir": "./src",
    "middleware": "express",
    "authenticationModule": "./src/service/AuthService.ts"
  }
}
